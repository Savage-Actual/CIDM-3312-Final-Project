@page "{id:int}"
@model CIDM_3312_Final_Project.Pages.Weapons.EditModel

@{
    ViewData["Title"] = "Edit Weapon";
}

<h1>Edit Weapon</h1>

<h4>Weapon</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Weapon.WeaponID" />
            <div class="form-group">
                <label asp-for="Weapon.Name" class="control-label"></label>
                <input asp-for="Weapon.Name" class="form-control" />
                <span asp-validation-for="Weapon.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.WeaponType" class="control-label"></label>
                <input asp-for="Weapon.WeaponType" class="form-control" />
                <span asp-validation-for="Weapon.WeaponType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.DamageRating" class="control-label"></label>
                <input asp-for="Weapon.DamageRating" class="form-control" />
                <span asp-validation-for="Weapon.DamageRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.AmmoType" class="control-label"></label>
                <input asp-for="Weapon.AmmoType" class="form-control" />
                <span asp-validation-for="Weapon.AmmoType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.Price" class="control-label"></label>
                <input asp-for="Weapon.Price" class="form-control" />
                <span asp-validation-for="Weapon.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.StockQuantity" class="control-label"></label>
                <input asp-for="Weapon.StockQuantity" class="form-control" />
                <span asp-validation-for="Weapon.StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.ManufacturerID" class="control-label"></label>
                <select asp-for="Weapon.ManufacturerID" class="form-control"
                        asp-items="Model.ManufacturerOptions">
                    <option value="">-- Select Manufacturer --</option>
                </select>
                <span asp-validation-for="Weapon.ManufacturerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


