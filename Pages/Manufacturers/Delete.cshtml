@page "{id:int}"
@model CIDM_3312_Final_Project.Pages.Manufacturers.DeleteModel
@{
    ViewData["Title"] = "Delete Manufacturer";
}

<h1>Delete Manufacturer</h1>

<h4>Are you sure you want to delete this manufacturer?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Manufacturer.Name</dd>

    <dt class="col-sm-3">Faction</dt>
    <dd class="col-sm-9">@Model.Manufacturer.Faction</dd>

    <dt class="col-sm-3">Planet Of Origin</dt>
    <dd class="col-sm-9">@Model.Manufacturer.PlanetOfOrigin</dd>

    <dt class="col-sm-3">Year Founded</dt>
    <dd class="col-sm-9">@Model.Manufacturer.YearFounded</dd>

    <dt class="col-sm-3">Reputation Rating</dt>
    <dd class="col-sm-9">@Model.Manufacturer.ReputationRating</dd>
</dl>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="Index">Cancel</a>
</form>
